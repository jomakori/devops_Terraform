###############################################################################################
#------------------------------------ Provider Versioning ------------------------------------# 
###############################################################################################
terraform {
  cloud {
    organization = "demo_org"

    workspaces {
      name = "demo_app_rds"
    }
  }
  required_providers {
    aws = {
      source = "hashicorp/aws"
    }
  }
}

############################################################################################
#------------------------------------ Provider Configs ------------------------------------# 
############################################################################################
provider "aws" {
  region = var.region
}

## Data sources from AWS provider
data "aws_caller_identity" "current" {}
data "aws_availability_zones" "available" {}
